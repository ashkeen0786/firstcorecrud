@{
    ViewData["Title"] = "Home Page";
}

@model firstcorecrud.Models.student


<form class="form-group" asp-controller="Home" asp-action="Privacy" method="post">
    <div class="m-md-3">
        @Html.HiddenFor(m=>m.Id)
    
        <label>Name:-</label>
        <input asp-for="Name" class="form-control"  required="required" />

  

   
        <label>Email:-</label>
        <input asp-for="Email" class="form-control" type="email" required="required"/>

    

    
        <label>Phone:-</label>
        <input asp-for="Phone" class="form-control"  required="required" /><br />

    
    <button type="submit" class="btn btn-success">Submit</button>
       </div>

</form>